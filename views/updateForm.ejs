      </div>
      <h4>
        <ul class="nav navbar-nav">
        </ul>
      </h4>

    </div>
  </nav>
  <!-- Main content -->
  <div class="main-content">
    <center>
      <h1>แก้ไขรายการสินค้า</h1>
      <div class="container edit-form">
        <table class="table">
          <thead>
            <tr>
              <th>ชื่อสินค้า</th>
              <th>ราคา</th>
              <th>รายละเอียด สินค้า</th>
              <th>ImageID</th>
              <th>UnitslnStock</th>
              <th>แก้ไข</th>
            </tr>
          </thead>
          <tbody>
            <tr>
                <p style="font-weight: bold;" name = "productID">ProductID IS "<%=data.productID%>" </p>
              <form  action="/edit/<%=data.productID%>" method="Post">
                <td><input name="productName" value="<%=data.productName%>"></td> 
                <td><input name="productPrice" value="<%=data.productPrice%>"></td> 
                <td><input name="productDetail" value="<%=data.productDetail%>"></td>
                <td><input name="image" value="<%=data.image%>"></td>  
                <td><input name="UnitsInStock" value="<%=data.UnitsInStock%>"></td>
                <td><button type="button" onclick="confirmEdit()">Edit</button></td>
              </form>
              
            </tr>
          </tbody>
        </table>
      </div>
    </center>
  </div>
  <script>
    // JavaScript function for confirmation before editing
    function confirmEdit() {
      var confirmed = confirm("คุณต้องการแก้ไขรายการสินค้าใช่ไหม?");
      if (confirmed) {
        document.querySelector('form').submit();
      } else {

      }
    }
  </script>
