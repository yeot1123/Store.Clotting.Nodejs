<body>
  <!-- Navigation bar -->
  <!-- Navigation bar -->
  <nav class="navbar-navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">NICEDREAM 
        <i class='bx bx-moon'></i>
