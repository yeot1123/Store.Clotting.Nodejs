  <!-- Login Form -->
  <div class="container mt-4">
    <h3 class="text-center">แสดงรายการสินค้าทั้งหมด</h3>
    <form class="form-inline justify-content-center mb-4" method="get" action="">
      
        <a href="/insertForm" class="btn btn-success">เพิ่มรายการสินค้า</a>  

    </form> <br>

    <div class="table-responsive">
      <table class="table table-striped"><br>
        <thead>
          <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(function(item, index) { %>
          <tr>
            <td><%= item.productID %></td>
            <td><%= item.productName %></td>
            <td><%= item.productPrice %></td>
            <td><%= item.UnitsInStock %></td>
            <td><%= item.productDetail %></td>
            <td><a class="Edittext" href="/edit/<%= item.productID %>">Edit</a></td>
            <td><a class="deleteBTN" href="/delete/<%= item.productID %>" onclick="return confirmDelete()">Delete</a></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <!-- ลิงก์เพื่อเรียกใช้งาน DataTables JS -->
  <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap.min.js"></script>
  <!-- <script src="https://cdn.datatables.net/scroller/2.2.0/js/dataTables.scroller.min.js"></script> -->
<script>

  // เรียกใช้ฟังก์ชันนี้เมื่อหน้าโหลดเสร็จ
  $(document).ready(function() {
    // ใช้ Bootstrap's DataTable ในการเรียกดูข้อมูล
    $('table').DataTable({
      "paging": true, // เปิดใช้งานการแบ่งหน้า
      "lengthMenu": [10, 25, 50], // แสดงตัวเลือกในการเลือกแสดงข้อมูลต่อหน้า
      "pageLength": 50 // กำหนดจำนวนข้อมูลที่แสดงในหน้าละ 10 แถว
    });
  });
</script>
